<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PartyKneadsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize light theme here. -->
        <item name="android:editTextColor">@color/semiblack</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:colorPrimary">@color/semiblack</item>
        <item name="android:textColor">@color/semiblack</item>

        <item name="colorSurface">@color/semiwhite</item>
        <item name="android:colorBackground">@color/semiwhite</item>
        <!-- Set baby pink as the primary container and control highlight for clicks -->
        <item name="colorPrimaryContainer">@color/pink</item>
        <item name="colorOnPrimary">@color/pink</item>
        <item name="colorControlHighlight">@color/pink</item>
        <item name="colorAccent">@color/pink</item>

        <!-- Ripple effect color for Material components -->
        <item name="android:colorControlHighlight">@color/pink</item>
    </style>

    <style name="Theme.PartyKneadsApp" parent="Base.Theme.PartyKneadsApp" />

    <style name="DialogAnimation">
        <!-- Enter animation for the dialog -->
        <item name="android:windowEnterAnimation">@anim/slide_in</item>

        <!-- Exit animation for the dialog -->
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>
