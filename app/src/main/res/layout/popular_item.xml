<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="214dp"
        android:layout_height="283dp"
        android:background="@color/footerpink"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_gravity="start"
            android:src="@drawable/cake_sample" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/heart_clicked" />

        <TextView
            android:id="@+id/productText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Vanilla Bean Cake"
            android:textAlignment="center"
            android:textColor="@color/semiblack"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Pure Vanilla Cake"
            android:textAlignment="center"
            android:textColor="@color/pink"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:background="@drawable/star" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="â‚±700.00"
            android:textAlignment="center"
            android:textColor="@color/semiblack"
            android:textSize="18dp" />

        <!-- Horizontal LinearLayout for the Cart and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            >

            <!-- Cart ImageView -->
            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:src="@drawable/cart" />

            <!-- Button Order Now -->
            <Button
                android:id="@+id/btnOrderNow"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:backgroundTint="@color/darkpink"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Order Now"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
