<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:background="@drawable/loginbgg"
    tools:context=".LoginFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Back"
        android:textAlignment="textEnd"
        android:textColor="@color/darkpink"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/terms"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logincont"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Everything That Matters for Your Experience"
            android:textAlignment="center"
            android:textColor="@color/semiblack"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="268dp">

            <TextView
                android:id="@+id/tvAgree"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/readTerm"
                android:textColor="@color/semiblack"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Switch
                android:id="@+id/switchTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <!--        <TextView-->
        <!--            android:id="@+id/textView12"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:fontFamily="@font/montserrat_semibold"-->
        <!--            android:text="*"-->
        <!--            android:textColor="@color/darkpink"-->
        <!--            android:textSize="18dp"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/tvAgree"-->
        <!--            app:layout_constraintEnd_toEndOf="@+id/tvAgree"-->
        <!--            app:layout_constraintHorizontal_bias="0.0"-->
        <!--            app:layout_constraintStart_toStartOf="@+id/tvAgree"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/tvAgree"-->
        <!--            app:layout_constraintVertical_bias="0.0" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="197dp">

            <TextView
                android:id="@+id/tvNews"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity=""
                android:text="I'd like to receive news, updates and promotions via Email."
                android:textColor="@color/semiblack"
                android:textSize="14dp"
                app:layout_constraintEnd_toStartOf="@+id/btnNews"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAgree" />

            <Switch
                android:id="@+id/btnNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnTermsandConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/terms"
            android:textColor="@color/darkpink"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnCont"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/pink"
            android:fontFamily="@font/montserrat_bold"
            android:text="Continue"
            android:textColor="@color/semiwhite"
            android:textSize="18dp"
            app:cornerRadius="10dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>